[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true
  dark = true

[init]
  defaultBranch = main

[push]
  autoSetupRemote = true

[pull]
  ff = only

[alias]
  logline = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[merge]
  conflictStyle = zdiff3

[user]
  name = Brandon Catubig

[include]
  path = ~/gituser
